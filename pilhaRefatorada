import java.util.Arrays;

public class pilhaRefatorada {

    private static final int EMPTY = -1;

    private final discoRefatorado[] discos;
    private final int capacidade;
    private int topo = EMPTY;

    public pilhaRefatorada(int capacidade) {
        if (capacidade <= 0) {
            throw new IllegalArgumentException("A capacidade da pilha deve ser maior que zero.");
        }
        this.capacidade = capacidade;
        this.discos = new discoRefatorado[capacidade];
    }

    public boolean push(discoRefatorado disco) {
        if (isFull() || disco == null) {
            return false;
        }
        discos[++topo] = disco;
        return true;
    }

    public discoRefatorado pop() {
        if (isEmpty()) {
            return null;
        }
        discoRefatorado discoRemovido = discos[topo];
        discos[topo--] = null;
        return discoRemovido;
    }

    public discoRefatorado peek() {
        if (isEmpty()) {
            return null;
        }
        return discos[topo];
    }

    public boolean isEmpty() {
        return topo == EMPTY;
    }

    public boolean isFull() {
        return topo == capacidade - 1;
    }

    public int getCapacidade() {
        return capacidade;
    }

    public discoRefatorado getDisco(int index) {
        if (index < 0 || index > topo) {
            return null;
        }
        return discos[index];
    }

    public int getTamanhoMaximo() {
        return capacidade;
    }

    @Override
    public String toString() {
        return "Pilha: " + Arrays.toString(discos);
    }
}
